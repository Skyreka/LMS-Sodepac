{% apply inline_css(source('mails/theme.css')) %}

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
<style>
  @media only screen and (max-width: 600px) {
    .inner-body {
      width: 100% !important;
    }

    .footer {
      width: 100% !important;
    }
  }

  @media only screen and (max-width: 500px) {
    .button {
      width: 100% !important;
    }
  }
</style>

<table class="wrapper" width="100%" cellpadding="0" cellspacing="0" role="presentation">
  <tr>
    <td align="center">
      <table class="content" width="100%" cellpadding="0" cellspacing="0" role="presentation">
        <!-- Header -->
        <tr>
          <td class="header">
            <a href="{{ absolute_url('/') }}" style="display: inline-block;">
              <img src="{{ absolute_url('/images/logo.jpg') }}" style="max-width: 200px;" class="logo" alt="Logo">
            </a>
          </td>
        <!-- Email Body -->
        <tr>
          <td class="body" width="100%" cellpadding="0" cellspacing="0">
            <table class="inner-body" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
              <!-- Body content -->
              <tr>
                <td class="content-cell">
                  {% block body '' %}
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td>
            <table class="footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
              <tr>
                <td class="content-cell" align="center">
                  <a href="{{ APP_LINK_APPSTORE }}">
                    <img style="border: 0;" src="https://mlj66.org/wp-content/uploads/2019/07/bouton-telechargement-apple-app-store.png" width="111" height="37" alt="Google Store" />
                  </a>
                </td>
                <td class="content-cell" align="center">
                  <a href="{{ APP_LINK_PLAYSTORE }}">
                    <img style="border: 0;" src="https://upload.wikimedia.org/wikipedia/commons/thumb/7/78/Google_Play_Store_badge_EN.svg/360px-Google_Play_Store_badge_EN.svg.png" width="120" height="40" alt="PlayStore" />
                  </a>
                </td>
              </tr>
            </table>
          </td>
        </tr>
        <tr>
          <td>
            <table class="footer" align="center" width="570" cellpadding="0" cellspacing="0" role="presentation">
              <tr>
                <td class="content-cell" align="center">
                  <small>
                    Vous avez reçu cet email car vous vous êtes inscrit sur {{ APP_NAME }}.<br>
                    {{ APP_ADDRESS }}<br>
                  </small>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>

{% endapply %}
