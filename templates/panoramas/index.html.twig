{% extends 'base.html.twig' %}

{% block title %}Listes des Panoramas{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item active"><a href="{{ path('panoramas.index') }}">Panoramas</a></li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex no-block">
                            <h4 class="card-title">Liste des Panoramas</h4>
                            <div class="ml-auto">
                                <a title="Créer un panorama" href="{{ path('panoramas.new') }}" class="btn btn-success">Créer</a>
                                <a href="{{ path('panoramas.history.index') }}" class="btn btn-info">Historique des Panoramas</a>
                            </div>
                        </div>
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table" id="datatable">
                                <thead>
                                <tr>
                                    <th>Date de création</th>
                                    <th>Texte</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for panorama in panoramas %}
                                    <tr>
                                        <td>{{ panorama.creationDate|localizeddate('none', 'none', null, null, 'd MMMM Y') }}</td>
                                        <td>{{ panorama.text }}</td>
                                        <td>
                                            {% if panorama.validate == 1 %}
                                                <span class="badge badge-success">Validé</span>
                                            {% elseif panorama.validate == 0 %}
                                                <span class="badge badge-warning">En attente de validation</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if panorama.firstFile %}
                                                <a href="{{ asset('uploads/panorama/' ~ panorama.firstFile) }}" class="btn btn-success" target="_blank">PDF</a>
                                            {% endif %}
                                            {% if panorama.secondFile %}
                                                <a href="{{ asset('uploads/panorama/' ~ panorama.secondFile) }}" class="btn btn-success" target="_blank">Image 1</a>
                                            {% endif %}
                                            {% if panorama.thirdFile %}
                                                <a href="{{ asset('uploads/panorama/' ~ panorama.thirdFile) }}" class="btn btn-success" target="_blank">Image 2</a>
                                            {% endif %}
                                            {% if app.user.status == 'ROLE_ADMIN' %}
                                                <form method="POST" action="{{ path('panoramas.delete', {id: panorama.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer le panorama ?')">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ panorama.id) }}">
                                                    <button class="btn btn-danger">Supprimer</button>
                                                </form>
                                                <a href="{{ path('panoramas.edit', {id: panorama.id}) }}" class="btn btn-primary">Editer</a>
                                                {% if panorama.validate == 0 %}
                                                    <form method="POST" action="{{ path('panoramas.valid', {id: panorama.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir valider le panorama ?')">
                                                        <input type="hidden" name="_method" value="VALID">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ panorama.id) }}">
                                                        <button class="btn btn-success">Valider</button>
                                                    </form>
                                                {% endif %}
                                            {% elseif app.user.status == 'ROLE_TECHNICIAN' %}
                                                {% if panorama.validate == 1 %}
                                                    <a title="Envoyer ce panorama" href="{{ path('panoramas.send', {id: panorama.id}) }}" class="btn btn-info">Envoyer</a>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/b-1.6.1/b-colvis-1.6.1/b-flash-1.6.1/b-html5-1.6.1/b-print-1.6.1/r-2.2.3/datatables.min.js"></script>
    <script>
        $('#datatable').DataTable({
            dom: 'Bfrtip',
            responsive: true,
            "language": {
                "sProcessing":     "Traitement en cours...",
                "sSearch":         "Rechercher&nbsp;:",
                "sLengthMenu":     "Afficher _MENU_ &eacute;l&eacute;ments",
                "sInfo":           "Affichage de l'&eacute;l&eacute;ment _START_ &agrave; _END_ sur _TOTAL_ &eacute;l&eacute;ments",
                "sInfoEmpty":      "Affichage de l'&eacute;l&eacute;ment 0 &agrave; 0 sur 0 &eacute;l&eacute;ment",
                "sInfoFiltered":   "(filtr&eacute; de _MAX_ &eacute;l&eacute;ments au total)",
                "sInfoPostFix":    "",
                "sLoadingRecords": "Chargement en cours...",
                "sZeroRecords":    "Aucun &eacute;l&eacute;ment &agrave; afficher",
                "sEmptyTable":     "Aucune donn&eacute;e disponible dans le tableau",
                "oPaginate": {
                    "sFirst":      "Premier",
                    "sPrevious":   "Pr&eacute;c&eacute;dent",
                    "sNext":       "Suivant",
                    "sLast":       "Dernier"
                },
                "oAria": {
                    "sSortAscending":  ": activer pour trier la colonne par ordre croissant",
                    "sSortDescending": ": activer pour trier la colonne par ordre d&eacute;croissant"
                },
                "select": {
                    "rows": {
                        _: "%d lignes séléctionnées",
                        0: "Aucune ligne séléctionnée",
                        1: "1 ligne séléctionnée"
                    }
                }
            },
            buttons: []
        });
    </script>
{% endblock %}