<div class="card">
    <div class="card-body">
        <div class="d-flex no-block">
            <h4 class="card-title">Listes des panoramas envoyé en {{ year }}</h4>
        </div>
        <div class="table-responsive m-t-20">
            <table class="table stylish-table">
                <thead>
                <tr>
                    <th>Date de création</th>
                    <th>Date d'envoi</th>
                    <th>Texte</th>
                    <th>Destinataires</th>
                </tr>
                </thead>
                <tbody>
                {% for panorama in panoramas %}
                    <tr>
                        <td>{{ panorama.creationDate|localizeddate('none', 'none', null, null, 'd MMMM Y') }}</td>
                        <td>{{ panorama.sendDate|localizeddate('none', 'none', null, null, 'd MMMM Y à HH:mm') }}</td>
                        <td>{{ panorama.text }}</td>
                        <td>
                            {% for customer in panorama.customers %}
                                {{ customer.customers.firstname }} {{ customer.customers.lastname }} ,
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>