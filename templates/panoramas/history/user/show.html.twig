{% extends 'base.html.twig' %}

{% block title %}Voir Panorama{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">DÃ©couvrir le Panorama</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('panorama_history_index') }}">Panorama</a></li>
                </ol>
            </div>
        </div>
        <div class="col-12">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12">
                {% if panorama.firstFile != null %}
                    <div class="card">
                        <div class="card-header">
                            <h5>Fichiers 1:</h5>
                        </div>
                        <div class="card-body">
                            {% if panorama.firstFile|split('.')|last != 'pdf' %}
                                <img class="d-block w-100" src="{{ asset('uploads/panorama/' ~ panorama.firstFile ) }}" alt="Image">
                            {% else %}
                                <object data="{{ asset('uploads/panorama/' ~ panorama.firstFile ) }}" type="application/pdf">
                                    <iframe src="{{ asset('uploads/panorama/' ~ panorama.firstFile ) }}"></iframe>
                                </object>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                {% if panorama.secondFile != null %}
                    <div class="card">
                        <div class="card-header">
                            <h5>Fichiers 2:</h5>
                        </div>
                        <div class="card-body">
                            {% if panorama.secondFile|split('.')|last != 'pdf' %}
                                <img class="d-block w-100" src="{{ asset('uploads/panorama/' ~ panorama.secondFile ) }}" alt="Image">
                            {% else %}
                                <object data="{{ asset('uploads/panorama/' ~ panorama.secondFile ) }}" type="application/pdf">
                                    <iframe src="{{ asset('uploads/panorama/' ~ panorama.secondFile ) }}"></iframe>
                                </object>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
                {% if panorama.thirdFile != null %}
                    <div class="card">
                        <div class="card-header">
                            <h5>Fichiers 3:</h5>
                        </div>
                        <div class="card-body">
                            {% if panorama.thirdFile|split('.')|last != 'pdf' %}
                                <img class="d-block w-100" src="{{ asset('uploads/panorama/' ~ panorama.thirdFile ) }}" alt="Image">
                            {% else %}
                                <object data="{{ asset('uploads/panorama/' ~ panorama.thirdFile ) }}" type="application/pdf">
                                    <iframe src="{{ asset('uploads/panorama/' ~ panorama.thirdFile ) }}"></iframe>
                                </object>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
