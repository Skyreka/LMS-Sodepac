{% extends 'base.html.twig' %}

{% block title %}Créer un Panorama{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/file.css') }}">
    <link rel="stylesheet" href="{{ asset('plugins/dropify/dist/css/dropify.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Ajouter un Panorama</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('panoramas.index') }}">Panoramas</a></li>
                    <li class="breadcrumb-item active">Création</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-12">
                                    {{ form_row(form.text) }}
                                </div>
                                <div class="col-12 col-md-3">
                                    {{ form_row(form.first_file) }}
                                </div>
                                <div class="col-12 col-md-3">
                                    {{ form_row(form.second_file) }}
                                </div>
                                <div class="col-12 col-md-3">
                                    {{ form_row(form.third_file) }}
                                </div>
                            </div>
                        <button class="btn btn-primary">Ajouter</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('plugins/dropify/dist/js/dropify.js') }}"></script>
    <script>
        $(document).ready(function() {
            // Translated
            $('.dropify-fr').dropify({
                messages: {
                    default: 'Glissez-déposez un fichier ici ou cliquez',
                    replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
                    remove: 'Supprimer',
                    error: 'Désolé, le fichier trop volumineux'
                }
            });
        });
    </script>
{% endblock %}