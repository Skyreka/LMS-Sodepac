{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active"><a href="{{ path('login.success') }}">Accueil</a></li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% if app.user.exploitation is null %}
            <div class="alert alert-info">Vous n'avez actuellement pas d'exploitation <br> Merci de vous rapprocher de votre technicien référent pour la création de votre exploitation</div>
        {% endif %}
        <div class="row">
            <div class="col-md-6 d-none d-md-block">
                <div class="card">
                    <div class="card-body pb-0">
                        <h4 class="card-title">Flashs</h4>
                    </div>
                    <div class="comment-widgets position-relative mb-2 common-widget">
                        <div class="d-flex flex-row comment-row p-3">
                            {% for bsv in bsvs %}
                                {% if date(bsv.displayAt) <= date() and bsv.checked == 0 %}
                                    <div class="comment-text w-100 p-3">
                                        <h5>BSV du {{ bsv.displayAt|date('d M') }}</h5>
                                        <p class="mb-1 overflow-hidden">{{ bsv.bsv.text }}</p>
                                        <div class="comment-footer">
                                            <span class="text-muted pull-right">{{ bsv.displayAt|date('d M y à h:m') }}</span>
                                            <span class="badge badge-info">Non lu</span>
                                            <span class="action-icons">
                                                <form method="POST" action="{{ path('user.bsv.check', {id: bsv.id}) }}" style="display: inline-block">
                                                    <input type="hidden" name="_method" value="CHECK">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('check' ~ bsv.id) }}">
                                                    <button class="btn btn-success btn-xs"><i class="ti-check"></i> Lire</button>
                                                </form>
                                            </span>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 d-none d-md-block">
                <div class="card">
                    <div class="card-body pb-0">
                        <h4 class="card-title">Panorama</h4>
                    </div>
                    <div class="comment-widgets position-relative mb-2 common-widget">
                        <div class="d-flex flex-row comment-row p-3">
                            {% for panorama in panoramas %}
                                {% if date(panorama.displayAt) <= date() and panorama.checked == 0 %}
                                    <div class="comment-text w-100 p-3">
                                        <h5>Panorama du {{ panorama.displayAt|date('d M') }}</h5>
                                        <p class="mb-1 overflow-hidden">{{ panorama.panorama.text }}</p>
                                        <div class="comment-footer">
                                            <span class="text-muted pull-right">{{ panorama.displayAt|date('d M y à h:m') }}</span>
                                            <span class="badge badge-info">Non lu</span>
                                            <span class="action-icons">
                                                <form method="POST" action="{{ path('user.panorama.check', {id: panorama.id}) }}" style="display: inline-block">
                                                    <input type="hidden" name="_method" value="CHECK">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('check' ~ panorama.id) }}">
                                                    <button class="btn btn-success btn-xs">Lire</button>
                                                </form>
                                            </span>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-body little-profile text-center">
                        <h3 class="m-b-0">Bonjour, {{ app.user.firstname }} {{ app.user.lastname }}</h3>
                        <div class="row text-center m-t-20">
                            <div class="col-12 m-t-20">
                                <h3 class="m-b-0 font-light">
                                    {% if app.user.exploitation.size is defined  %}
                                        {{ app.user.exploitation.size }} ha
                                    {% endif %}
                                </h3><small>Exploitation</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex no-block">
                            <h4 class="card-title">Vos Ilots</h4>
                            <div class="ml-auto">
                                {% if app.user.exploitation is not empty %}
                                    <a href="{{ path('ilots.new') }}" class="btn btn-success">Ajouter</a>
                                {% endif %}
                            </div>
                        </div>
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table">
                                <thead>
                                <tr>
                                    <th>Ilots</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for ilot in ilots %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('ilots.show', {id: ilot.id}) }}">
                                                <h6>{{ ilot.name }} de {{ ilot.size }} ha</h6><small class="text-muted">{{ ilot.type.name }}</small>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}