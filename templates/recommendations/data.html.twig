{% for recommendation in recommendations %}
    <tr>
        <td>
            <a href="{{ path('recommendations.synthese', {id: recommendation.id}) }}">{{ recommendation.id }}</a>
        </td>
        <td>
            <a href="">
                <h6>{{ recommendation.exploitation.users.identity }}</h6><small class="text-muted">{{ recommendation.exploitation.users.email }}</small>
            </a>
        </td>
        <td>{{ recommendation.culture.name }}</td>
        <td>
            {% if( recommendation.status == 1 ) %}
                <span class="badge badge-warning">Enregistré</span>
            {% elseif( recommendation.status == 2 ) %}
                <span class="badge badge-success">Envoyé</span>
            {% endif %}
        </td>
        <td>
            {{ recommendation.createAt | date('d M Y H:i') }}
        </td>
        <td>
            <div style="display: flex">
                <a class="btn btn-success" href="{{ path('recommendations.synthese', {id: recommendation.id}) }}"><i class="fa fa-eye text-white"></i></a>
                {% if( recommendation.status == 2 ) %}
                    <form method="POST" action="{{ path('recommendations.send', {id: recommendation.id}) }}">
                        <input type="hidden" name="_method" value="SEND">
                        <input type="hidden" name="_token" value="{{ csrf_token('send') }}">
                        <button class="btn btn-primary ml-2"><i class="fa fa-repeat"></i></button>
                    </form>
                {% endif %}
                <form method="POST" action="{{ path('recommendations.delete', {'id': recommendation.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir effacer cette recommandation? Cette action est irréversible et l\'effacera du compte client également.')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recommendation.id) }}">
                    <button class="btn btn-danger ml-2"><i class="fa fa-trash"></i></button>
                </form>
            </div>
        </td>

    </tr>
{% endfor %}