{% extends 'base.html.twig' %}

{% block title %}Liste des produits - Recommandation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Liste des produits</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendations.index') }}">Recommandation</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendations.select') }}">{{ recommendations.exploitation.users.identity }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendations.select') }}">{{ recommendations.culture.name }}</a></li>
                    <li class="breadcrumb-item active">Liste des produits sélectionnés</li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-lg-12">
                <a href="{{ path('recommendations.canevas', {'recommendations': recommendations.id, 'slug': recommendations.culture.slug}) }}" class="btn btn-light-success mb-3">Revenir au canevas</a>
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped no-wrap" id="edit-table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom du produit</th>
                                    <th>Dosage Max</th>
                                    <th>Edition</th>
                                    <th>Unité</th>
                                    <th class="text-nowrap">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.id }}</td>
                                            <td>{{ product.product.name }}</td>
                                            <td class="text-danger">{{ product.dose }} <small>{{ product.unit }}</small></td>
                                            <td>{{ product.dose }}</td>
                                            <td>{{ product.unit }}</td>
                                            <td class="text-nowrap">
                                                <form method="POST" action="{{ path('recommendations.delete.product', {'id': product.id}) }}">
                                                    <input type="hidden" name="_method" value="DELETE">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                    <button class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <a href="{{ path('recommendations.add.other.product', {id: recommendations.id}) }}" class="btn btn-primary">Ajouter un produit hors canevas</a>
                <a href="{{ path('recommendations.mentions', {id: recommendations.id}) }}" class="btn btn-success float-right">Valider liste des produits choisis</a>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('plugins/jquery-tabledit/jquery.tabledit.min.js') }}"></script>
    <script>
        $('#edit-table').Tabledit({
            url: '/recommendations/edit-dose',
            editButton: false,
            hideIdentifier: true,
            columns: {
                identifier: [0, 'id'],
                editable: [[3, 'dose']]
            }
        });
    </script>
{% endblock %}