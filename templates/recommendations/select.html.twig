{% extends 'base.html.twig' %}

{% block title %}Sélection - Recommendation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendations.index') }}">Recommendation</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Sélection</a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h4 class="card-title">Création d'une recommendation</h4>
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_rest(form) }}
                            <button class="btn btn-primary">Accéder au canevas</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $('.select2').select2();
    </script>
    <script>
        $(document).on('change', '#recommendation_add_exploitation', function () {
            let $field = $(this)
            let $form = $field.closest('form')
            let data = {}
            data[$field.attr('name')] = $field.val()
            $.post($form.attr('action'), data).then(function (data) {
                let $input = $(data).find('#recommendation_add_culture')
                $('#recommendation_add_culture').replaceWith( $input )
            })
        })
    </script>
{% endblock %}