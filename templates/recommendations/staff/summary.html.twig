{% extends 'base.html.twig' %}

{% block title %}Synthese - Catalogue{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Récapitulatif de la Catalogue</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendation_index') }}">Catalogue</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendation_new') }}">{{ recommendation.exploitation.users.identity }}</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('recommendation_new') }}">{{ recommendation.culture.name }}</a></li>
                    <li class="breadcrumb-item active">Bilan</li>
                </ol>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-8">
                {% if recommendation.status <= 1 %}
                    <a href="{{ path('recommendation_mentions', {'id': recommendation.id}) }}" class="btn btn-light-success mb-3">Revenir méthodes alternatives</a>
                {% endif %}
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped no-wrap" id="edit-table">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nom du produit</th>
                                    <th>Dosage</th>
                                    <th>Surface</th>
                                    <th>Quantité Totale</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for product in products %}
                                        <tr>
                                            <td>{{ product.id }}</td>
                                            <td>{{ product.product.name }}</td>
                                            <td>{{ product.dose }} <small>{{ product.unit }}</small></td>
                                            <td>{{ cultureTotal }} <small>ha</small></td>
                                            <td>{{ product.quantity }}</td>
                                            <td>
                                                <form method="POST" action="{{ path('order_product_add', {product: product.id, recommendation: recommendation.id}) }}">
                                                    <input type="hidden" name="_method" value="ADDTOORDER">
                                                    <button class="btn btn-info ml-2"><i class="fas fa-truck"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <h4 class="card-title">Méthodes alternatives</h4>
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <p class="text-dark"><strong>Méthodes Alternatives</strong>: {{ recommendation.mention }}</p>
                        </div>
                        {% if recommendation.mentionTxt is not null %}
                            <div class="form-group">
                                <p class="text-dark"><strong>Commentaire</strong>: {{ recommendation.mentionTxt }}</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div style="display: flex" class="mb-3">
                    {% if( recommendation.status > 1 ) %}
                        {% include 'recommendations/staff/_send.html.twig' with {'button_label': 'Envoyer'} %}
                    {% endif %}
                    <button class="btn btn-primary loading-button" recommendation-id="{{ recommendation.id }}" type="button" id="loading-button" disabled>
                        <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                        Génération...
                    </button>
                    {% if( recommendation.status <= 1 ) %}
                        {% include 'recommendations/staff/_download.html.twig' with {'button_label': 'Générer'} %}
                    {% else %}
                        {% include 'recommendations/staff/_download.html.twig' with {'button_label': 'Télécharger'} %}
                    {% endif %}
                    {% include 'recommendations/staff/_delete.html.twig' with {'button_label': 'Supprimer'} %}
                </div>
                <div class="card">
                    <img src="{{ asset('images/background/field.jpg') }}" alt="Card image cap" class="w-100 rounded-top">
                    <div class="card-body little-profile text-center">
                        <div class="pro-img"><img src="{{ asset('images/user.png') }}" alt="user" class="rounded-circle shadow-sm"></div>
                        <h3 class="mb-0">{{ customer.identity }}</h3>
                        <p><span class="badge badge-success px-2 py-1">{{ customer.status }}</span></p>
                        <p>Exploitation de <span class="badge badge-warning px-2 py-1">{{ customer.exploitation.size }} ha</span></p>
                        <div class="row text-center mt-3 pt-1">
                            <div class="col-12 mt-4">
                                <h6 class="mb-0 font-weight-light">{{ customer.phone }}</h6><small>Téléphone</small>
                            </div>
                            <div class="col-12 mt-4">
                                <h6 class="mb-0 font-weight-light">{{ customer.email }}</h6><small>E-mail</small>
                            </div>
                            <div class="col-12 mt-4">
                                <h6 class="mb-0 font-weight-light">{{ customer.city }}</h6><small>Ville</small>
                            </div>
                            <div class="col-12 mt-4">
                                <h6 class="mb-0 font-weight-light">{{ customer.certificationPhyto }}</h6><small>Certification</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('plugins/jquery-tabledit/jquery.tabledit.min.js') }}"></script>
    <script>
        {% if recommendation.status <= 1 %}
            $('#edit-table').Tabledit({
                url: '/recommendations/edit-total-quantity',
                editButton: false,
                hideIdentifier: true,
                columns: {
                    identifier: [0, 'id'],
                    editable: [[4, 'quantity']]
                }
            });
        {% endif %}
        $('.loading-button').hide();
        $('.generate-buttons').click( function(e) {
            let recommendationId = $(this).attr('recommendation-id')
            let loadingButton = $("button[recommendation-id='" + recommendationId +"']");
            $(this).hide();
            loadingButton.show();
        } )
    </script>
{% endblock %}
