{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Synthèse des Catalogues</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item">Catalogue</li>
                    <li class="breadcrumb-item active">Synthèse</li>
                </ol>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Choix de l'année</h4>
                        <div class="button-group">
                            {% for i in 0..4 %}
                                <a href="{{ path('recommendation_synthese_data', {year: "now"|date("Y") - i}) }}" class="btn btn-block waves-effect waves-light btn-info history">{{ "now"|date("Y") - i }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-10">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table" id="datatable">
                                <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Exploitation</th>
                                    <th>Culture</th>
                                    <th>Statut</th>
                                    {% if app.user.status == 'ROLE_ADMIN' %}
                                        <th>Technicien</th>
                                    {% endif %}
                                    <th>Crée le</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody id="insert-data">
                                {% for recommendation in recommendations %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('recommendation_summary', {id: recommendation.id}) }}">{{ recommendation.id }}</a>
                                        </td>
                                        <td>
                                            <a href="{{ path('management_user_show', {id: recommendation.exploitation.users.id}) }}">
                                                <h6>{{ recommendation.exploitation.users.identity }}</h6><small class="text-muted">{{ recommendation.exploitation.users.email }}</small>
                                            </a>
                                        </td>
                                        <td>{{ recommendation.culture.name }}</td>
                                        <td>
                                            {% if( recommendation.status == 1 ) %}
                                                <span class="badge badge-warning">Créee</span>
                                            {% elseif( recommendation.status == 2 ) %}
                                                <span class="badge badge-info">Générée</span>
                                            {% elseif( recommendation.status == 3 ) %}
                                                <span class="badge badge-success">Envoyée</span>
                                            {% endif %}
                                        </td>
                                        {% if app.user.status == 'ROLE_ADMIN' %}
                                            <td>{{ recommendation.exploitation.users.technician.identity ? recommendation.exploitation.users.technician.identity : 'Aucun' }}</td>
                                        {% endif %}
                                        <td>
                                            {{ recommendation.createAt | localizeddate('none', 'none', app.request.locale, "Europe/Paris", "d MMM Y") }}
                                        </td>
                                        <td>
                                            <div style="display: flex">
                                                <a class="btn btn-success" href="{{ path('recommendation_summary', {id: recommendation.id}) }}"><i class="fa fa-eye text-white"></i></a>
                                                {% if( recommendation.status > 1 ) %}
                                                    {{ include('recommendations/staff/_send.html.twig') }}
                                                {% endif %}
                                                {{ include('recommendations/staff/_download.html.twig') }}
                                                {{ include('recommendations/staff/_delete.html.twig') }}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


