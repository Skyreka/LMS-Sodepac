        {% if interventions.findByTypeAndCulture('Désherbant', culture) is not empty %}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#desherbant" role="tab">
                    <span class="hidden-xs-down">Désherbant</span>
                </a>
            </li>
        {% endif %}
        {% if interventions.findByTypeAndCulture('Fongicide', culture) is not empty %}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#fongicide" role="tab">
                    <span class="hidden-xs-down">Fongicide</span>
                </a>
            </li>
        {% endif %}
        {% if interventions.findByTypeAndCulture('Insecticide', culture) is not empty %}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#insecticide" role="tab">
                    <span class="hidden-xs-down">Insecticide</span>
                </a>
            </li>
        {% endif %}
        {% if interventions.findByTypeAndCulture('Nutrition', culture) is not empty %}
