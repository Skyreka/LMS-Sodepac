                <a class="nav-link" data-toggle="tab" href="#fertilisant" role="tab">
                    <span class="hidden-xs-down">Fertilisant</span>
                </a>
            </li>
        {% endif %}
        {% if interventions.findByTypeAndCulture('Semis', culture) is not empty %}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#semis" role="tab">
                    <span class="hidden-xs-down">Semis</span>
                </a>
            </li>
        {% endif %}
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane" id="recolte" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Recolte', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="binage" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Binage', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="labour" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Labour', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="epandage" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Effluent</th>
                            <th>Quantité</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Epandage', culture) %}
                                <tr>
                                    <td>{{ intervention.effluent.name }}</td>
                                    <td>{{ intervention.quantity }} <small>tonne/ha</small></td>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="fertilisant" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Quantité</th>
                            <th>Reliquat d'azote</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Fertilisant', culture) %}
                                <tr>
                                    <td>{{ intervention.product.name }}</td>
                                    <td>{{ intervention.quantity }}</td>
                                    <td>{{ intervention.reliquat }} <small>Unités</small></td>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- PHYTO -->
        <div class="tab-pane" id="desherbant" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Produit</th>
