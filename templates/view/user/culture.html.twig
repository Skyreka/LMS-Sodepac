<div class="card">
    <div class="card-body pb-0">
        <h4 class="card-title">Intervention sur {{ culture.name.name }}</h4>
    </div>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs customtab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#recolte" role="tab">
                <span class="hidden-xs-down">Récolte</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#binage" role="tab">
                <span class="hidden-xs-down">Binage</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#labour" role="tab">
                <span class="hidden-xs-down">Labour</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#epandage" role="tab">
                <span class="hidden-xs-down">Epandage</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#desherbant" role="tab">
                <span class="hidden-xs-down">Désherbant</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#fongicide" role="tab">
                <span class="hidden-xs-down">Fongicide</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#insecticide" role="tab">
                <span class="hidden-xs-down">Insecticide</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#oligo" role="tab">
                <span class="hidden-xs-down">Oligo-element</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#fumure" role="tab">
                <span class="hidden-xs-down">Fumure</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#semis" role="tab">
                <span class="hidden-xs-down">Semis</span>
            </a>
        </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div class="tab-pane active" id="recolte" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Recolte', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="binage" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Binage', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="labour" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Labour', culture) %}
                                <tr>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="epandage" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Effluent</th>
                            <th>Quantité</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Epandage', culture) %}
                                <tr>
                                    <td>{{ intervention.effluent.name }}</td>
                                    <td>{{ intervention.quantity }} <small>tonne/ha</small></td>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="fumure" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Produit</th>
                            <th>Quantité</th>
                            <th>Reliquat d'azote</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions.findByTypeAndCulture('Fumure', culture) %}
                                <tr>
                                    <td>{{ intervention.product.name }}</td>
                                    <td>{{ intervention.quantity }}</td>
                                    <td>{{ intervention.reliquat }} <small>Unités</small></td>
                                    <td>{{ intervention.comment }}</td>
                                    <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="semis" role="tabpanel">
            <div class="p-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Variété</th>
                            <th>Quantité</th>
                            <th>Objectif</th>
                            <th>Commentaire</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for intervention in interventions.findByTypeAndCulture('Semis', culture) %}
                            <tr>
                                <td>{{ intervention.name }}</td>
                                <td>{{ intervention.quantity }} <small>{{ intervention.unit }}</small></td>
                                <td>{{ intervention.objective }} <small>Quitaux</small</td>
                                <td>{{ intervention.comment }}</td>
                                <td><span class="badge badge-success">{{ intervention.interventionAt | date('d-m-Y H:i:s') }}</span></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>