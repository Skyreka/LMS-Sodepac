{% extends 'base.html.twig' %}

{% block title %}Ajout d'un produit{% endblock %}

{% block stylesheets %}
    <link href="plugins/bootstrap-material-datetimepicker/css/bootstrap-material-datetimepicker.css" rel="stylesheet">
    <link href="plugins/bootstrap-datepicker/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <input type="hidden" id="cultureHectare" value="{{ cultureSize }}" />
            <div class="col-md-5 col-12 align-self-center">
                <h3 class="text-themecolor">Ajout d'un produit</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">{{ culture.ilot.name }}</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">{{ culture.name.name }}</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Intervention</a></li>
                    <li class="breadcrumb-item active">Ajout Produit</li>
                </ol>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
            {% if app.session.get('listCulture') %}
                <div class="alert alert-danger"><b>INTERVENTION MULTIPLE ACTIVÉE</b> <br> <a class="text-white" href="{{ path('login_success') }}">ANNULER</a></div>
            {% endif %}
        </div>
        <div class="alert alert-warning">Attention! Vous mélangez plusieurs produits, assurez vous que ce mélange est autorisé en consultant <a href="https://www.melanges.arvalisinstitutduvegetal.fr/" target="_blank">ce lien</a> En cas de doute, consulter votre conseiller.</div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.select2').select2();
            $('.js-datepicker').datepicker({
                weekStart:0,
                time: 1,
                language:"fr"
            });
        });
        $(document).on('change', '#intervention_add_product_productInStock', function () {
            let $field = $(this);
            let $form = $field.closest('form');
            let data = {};
            data[$field.attr('name')] = $field.val();
            $.post($form.attr('action'), data).then(function (data) {
                let $input = $(data).find('#intervention_add_product_doses');
                $('#intervention_add_product_doses').replaceWith($input)
            })
        })
        $(document).on('change', '#intervention_add_product_doses', function () {
            let $field = $(this)
            let $product = $('#intervention_add_product_productInStock');
            let form = $field.closest('form');
            let data = {}
            data[$product.attr('name')] =  $product.val();
            data[$field.attr('name')] =  $field.val();
            $.post(form.attr('action'), data).then(function (data) {
                let input = $(data).find('form');
                $(form).replaceWith( input )

                $('#intervention_add_product_doseHectare').on('input', function () {

                    let doseHectare = $(this).val();
                    let hectare = $('#cultureHectare').val()

                    let total = doseHectare * hectare;

                    $('#quantityLabel').text( 'Dose appliqué totale : ' + total.toFixed(2) + '  (' + doseHectare + ' x ' + hectare + 'ha )' );
                });
            })
        })
    </script>
{% endblock %}
