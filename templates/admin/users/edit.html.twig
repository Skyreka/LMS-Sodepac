{% extends 'base.html.twig' %}

{% block title %}{{ user.identity }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">{{ user.identity }}</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item active">Profil</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <!--begin::Alert-->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }}">{{ message }}</div>
                    {% endfor %}
                {% endfor %}
            </div>
            <div class="col-lg-4 col-xlg-3 col-md-5">
                <div class="card">
                    <div class="card-body">
                        <center class="m-t-30"> <img src="{{ asset('images/users/1.jpg') }}" class="img-circle" width="150" />
                            <h4 class="card-title m-t-10">{{ user.identity }} {{ user.isActive ? '<i class="mdi mdi-account-check"></i>' : '' }}</h4>
                            <h6 class="card-subtitle">{{  user.status(true) }}</h6>
                            <div class="row text-center justify-content-md-center">
                                <div class="col-4"><a href="javascript:void(0)" class="link"><i class="icon-picture"></i> <font class="font-medium">{{ user.exploitation ? user.exploitation.size ~ ' Ha' : '0' }}</font></a></div>
                            </div>
                        </center>
                    </div>
                    <div>
                        <hr> </div>
                    <div class="card-body"> <small class="text-muted">E-mail </small>
                        <h6>{{ user.email }}</h6>
                        <small class="text-muted p-t-30 db">Technicien</small>
                        <h6>{{ user.technician ? user.technician.identity : 'Aucun' }}</h6>
                        <small class="text-muted p-t-30 db">Téléphone</small>
                        <h6>{{ user.city ? user.city : 'Aucun' }}</h6>
                        <small class="text-muted p-t-30 db">Ville</small>
                        <h6>{{ user.city ? user.city : 'Aucune' }}</h6>
                        <small class="text-muted p-t-30 db">Certification Phyto</small>
                        <h6>{{ user.certificationPhyto ? user.certificationPhyto : 'Aucune' }}</h6>
                    </div>
                </div>
                {{ include('admin/users/_delete.html.twig') }}
            </div>
            <div class="col-lg-8 col-xlg-9 col-md-7">
                <div class="card">
                    <ul class="nav nav-tabs profile-tab" role="tablist">
                        <li class="nav-item"> <a class="nav-link active" data-toggle="tab" href="#settings" role="tab">Information</a> </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#exploitation" role="tab">Exploitation</a> </li>
                        <li class="nav-item"> <a class="nav-link" data-toggle="tab" href="#password" role="tab">Mot de passe</a> </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane active" id="settings" role="tabpanel">
                            <div class="card-body">
                                {{ include('admin/users/_form.html.twig') }}
                            </div>
                        </div>
                        <div class="tab-pane" id="exploitation" role="tabpanel">
                            {% if user.exploitation is null %}
                                <div class="card-body">
                                    <h6>Aucune exploitation trouvée pour cet utilisateur, vous pouvez en créer une en <a href="{{ path('admin_users_exploitation_new', {id: user.id    }) }}"> cliquant-ici</a></h6>
                                </div>
                            {% else %}
                                <div class="card-body">
                                    {{ include('admin/users/_form_exploitation.html.twig') }}
                                </div>
                            {% endif %}
                        </div>
                        <div class="tab-pane" id="password" role="tabpanel">
                            <div class="card-body">
                                {{ include('admin/users/_form_password.html.twig') }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
