{% extends 'base.html.twig' %}

{% block title %}Editer {{ user.firstname }} {{ user.lastname }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Editer {{ user.firstname }} {{ user.lastname }}</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin.users.index') }}">Utilisateurs</a></li>
                    <li class="breadcrumb-item active">Editer</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col-6">
                                    {{ form_row(form.firstname) }}
                                </div>
                                <div class="col-6">
                                    {{ form_row(form.lastname) }}
                                </div>
                            </div>
                            {{ form_rest(form) }}
                            <button class="btn btn-primary">Editer</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}