{% extends 'base.html.twig' %}

{% block title %}Cr√©er un BSV{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Sodepac</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Admin</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0)">BSV</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Modification</a></li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h4 class="card-title">Modifier le BSV</h4>
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-6">
                                {{ form_row(form.text) }}
                            </div>
                            <div class="col-2">
                                {{ form_row(form.first_file) }}
                            </div>
                            <div class="col-2">
                                {{ form_row(form.second_file) }}
                            </div>
                            <div class="col-2">
                                {{ form_row(form.third_file) }}
                            </div>
                        </div>
                        <button class="btn btn-primary">Modifier</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}