{% extends 'base.html.twig' %}

{% block title %}Listes des Flashs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Historique des Flashs</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('admin.bsv.index') }}">Flashs</a></li>
                    <li class="breadcrumb-item active">Historique</li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="button-group">
                            {% for i in 0..4 %}
                                <a href="{{ path('admin.bsv.history.show', {year: "now"|date("Y") - i}) }}" class="btn waves-effect waves-light btn-lg btn-info history">{{ "now"|date("Y") - i }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div id="insert-table">

                </div>
                <div class="spinner-border" role="status" id="loading">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}
{% block javascripts %}
    <script>
        $(document).on('click', 'a.history', function (event) {
            event.preventDefault();
            let $field = $(this)
            let url = $field.attr('href')
            $.post(url).then(function (data) {
                let content = $('#insert-table')
                content.empty()
                content.append( data )
            })
        })
        var $loading = $('#loading').hide();
        $(document)
            .ajaxStart(function () {
                $loading.show();
            })
            .ajaxStop(function () {
                $loading.hide();
            });
    </script>
{% endblock %}