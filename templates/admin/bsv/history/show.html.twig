<div class="card-body">
    <div class="d-flex no-block">
        <h4 class="card-title">Listes des BSV envoyé en {{ year }}</h4>
    </div>
    <div class="table-responsive m-t-20">
        <table class="table stylish-table">
            <thead>
            <tr>
                <th>Date de création</th>
                <th>Date d'envoi</th>
                <th>Texte</th>
                <th>Destinataires</th>
            </tr>
            </thead>
            <tbody>
            {% for key in bsv %}
                <tr>
                    <td>{{ key.creationDate|localizeddate('none', 'none', null, null, 'd MMMM Y') }}</td>
                    <td>{{ key.sendDate|localizeddate('none', 'none', null, null, 'd MMMM Y à HH:mm') }}</td>
                    <td>{{ key.text }}</td>
                    <td>
                        {% for customer in key.customers %}
                            {{ customer.customers.firstname }} {{ customer.customers.lastname }} ,
                        {% endfor %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>