<div class="card">
    <div class="card-body">
        <div class="d-flex no-block">
            <h4 class="card-title">Listes des Flashs envoyés en {{ year }}</h4>
        </div>
        <div class="table-responsive m-t-20">
            <table class="table stylish-table">
                <thead>
                <tr>
                    <th>Date de création</th>
                    <th>Date d'envoi</th>
                    <th>Texte</th>
                    <th>Destinataire</th>
                </tr>
                </thead>
                <tbody>
                {% for key in bsv %}
                    <tr>
                        <td>{{ key.bsv.creationDate|localizeddate('none', 'none', null, null, 'd MMMM Y') }}</td>
                        <td>{{ key.displayAt|localizeddate('none', 'none', null, null, 'd MMMM Y à HH:mm') }}</td>
                        <td>{{ key.bsv.text }}</td>
                        <td>{{ key.customers.identity }}</td>
                        <td>
                            {% if key.bsv.firstFile %}
                                <a href="{{ asset('uploads/bsv/' ~ key.bsv.firstFile) }}" class="btn btn-success" target="_blank">PDF</a>
                            {% endif %}
                            {% if key.bsv.secondFile %}
                                <a href="{{ asset('uploads/bsv/' ~ key.bsv.secondFile) }}" class="btn btn-success" target="_blank">Image 1</a>
                            {% endif %}
                            {% if key.bsv.thirdFile %}
                                <a href="{{ asset('uploads/bsv/' ~ key.bsv.thirdFile) }}" class="btn btn-success" target="_blank">Image 2</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>