{% extends 'base.html.twig' %}

{% block title %}Listes des BSV{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item active"><a href="{{ path('admin.bsv.index') }}">BSV</a></li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex no-block">
                            <h4 class="card-title">Liste des BSV en attente d'envoi</h4>
                            <div class="ml-auto">
                                <a href="{{ path('admin.bsv.new') }}" class="btn btn-success">Créer un BSV</a>
                                <a href="{{ path('admin.bsv.history.index') }}" class="btn btn-info">Historique des BSV</a>
                            </div>
                        </div>
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table">
                                <thead>
                                <tr>
                                    <th>Date de création</th>
                                    <th>Texte</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for key in bsv %}
                                    <tr>
                                        <td>{{ key.creationDate|date('d m Y') }}</td>
                                        <td>{{ key.text }}</td>
                                        <td>
                                            {% if key.firstFile %}
                                                <a href="{{ asset('uploads/bsv/' ~ key.firstFile) }}" class="btn btn-success" target="_blank">PDF</a>
                                            {% endif %}
                                            <a href="{{ path('admin.bsv.edit', {id: key.id}) }}" class="btn btn-primary">Editer</a>
                                            <form method="POST" action="{{ path('admin.bsv.delete', {id: key.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer le BSV ?')">
                                                <input type="hidden" name="_method" value="DELETE">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ key.id) }}">
                                                <button class="btn btn-danger">Supprimer</button>
                                            </form>
                                            <a href="{{ path('admin.bsv.send', {id: key.id}) }}" class="btn btn-info">Envoyer</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}