{% extends 'base.html.twig' %}

{% block title %} Admin {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Inactif</h4>
                        <div class="text-center">
                            <input data-plugin="knob" data-width="150" data-height="150" data-bgColor="#ebeff2" data-fgColor="#009efb" data-displayInput=false data-readOnly=true value="{{ inactivPercent }}" />
                        </div>
                        <h2 class="text-center font-weight-bold">{{ inactivCount }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Démo</h4>
                        <div class="text-center">
                            <input data-plugin="knob" data-width="150" data-height="150" data-bgColor="#ebeff2" data-fgColor="#009efb" data-displayInput=false data-readOnly=true value="{{ demoPercent }}" />
                        </div>
                        <h2 class="text-center font-weight-bold">{{ demoCount }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Light</h4>
                        <div class="text-center">
                            <input data-plugin="knob" data-width="150" data-height="150" data-bgColor="#ebeff2" data-fgColor="#009efb" data-displayInput=false data-readOnly=true value="{{ lightPercent }}" />
                        </div>
                        <h2 class="text-center font-weight-bold">{{ lightCount }}</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Full</h4>
                        <div class="text-center">
                            <input data-plugin="knob" data-width="150" data-height="150" data-bgColor="#ebeff2" data-fgColor="#009efb" data-displayInput=false data-readOnly=true value="{{ fullPercent }}" />
                        </div>
                        <h2 class="text-center font-weight-bold">{{ fullCount }}</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div
                                    class="round round-lg text-white d-inline-block text-center rounded-circle bg-info">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="ml-2 align-self-center">
                                <h3 class="mb-0 font-weight-light">{{ totalLitre|round(2, 'floor')  }} L</h3>
                                <h5 class="text-muted mb-0">Total des produits utilisés en Litre</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-row">
                            <div
                                    class="round round-lg text-white d-inline-block text-center rounded-circle bg-info">
                                <i class="fas fa-newspaper"></i>
                            </div>
                            <div class="ml-2 align-self-center">
                                <h3 class="mb-0 font-weight-light">{{ totalKilo|round(2, 'floor') }} Kg</h3>
                                <h5 class="text-muted mb-0">Total des produits utilisés en Kilo</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.knob.js') }}"></script>
    <script>
        $(function() {
            $('[data-plugin="knob"]').knob();
        });
    </script>
    <script src="{{ asset('js/jQuery.style.switcher.js') }}"></script>
{% endblock %}
