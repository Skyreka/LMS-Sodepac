{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Synthèse Commandes</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item active">Synthèse Commandes</li>
                </ol>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12 pull-right mb-2">
                <a href="{{ path('order_new') }}" class="btn btn-success pull-right ml-2">Créer un panier</a>
            </div>
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Client</th>
                                    {% if app.user.status == 'ROLE_ADMIN' %}
                                        <th>Technicien</th>
                                    {% endif %}
                                    <th>Date</th>
                                    <th>Statut</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('management_user_show', {id: order.customer.id}) }}">
                                                <h6>{{ order.customer.identity }}</h6><small class="text-muted">{{ order.customer.email }}</small>
                                            </a>
                                        </td>
                                        {% if app.user.status == 'ROLE_ADMIN' %}
                                            <td>
                                                <a href="{{ path('management_user_show', {id: order.customer.id}) }}">
                                                    <h6>{{ order.creator.identity }}</h6><small class="text-muted">{{ order.customer.email }}</small>
                                                </a>
                                            </td>
                                        {% endif %}
                                        <td>{{ order.createDate | localizeddate('none', 'none', app.request.locale, "Europe/Paris", "d MMM Y") }}</td>
                                        <td>
                                            {% if( order.status == 1 ) %}
                                                <span class="badge badge-success">Devis</span>
                                            {% elseif( order.status == 2 ) %}
                                                <span class="badge badge-warning">Attente signature</span>
                                            {% elseif( order.status == 3 ) %}
                                                <span class="badge badge-info">Validée</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div style="display: flex">
                                                {% if( order.status == 3 ) %}
                                                    <a title="PDF" class="btn btn-info" href="{{ path('order_pdf_view', {id_number: order.idNumber}) }}"><i class="fa fa-file-pdf text-white"></i></a>
                                                {% elseif( order.status == 1 ) %}
                                                    <a title="Voir" class="btn btn-success" href="{{ path('order_show', {id_number: order.idNumber}) }}"><i class="fa fa-eye text-white"></i></a>
                                                {% endif %}
                                                {% if is_granted( 'ROLE_SUPERADMIN' ) %}
                                                    <form method="POST" action="{{ path('order_delete_recorded', {'id': order.id}) }}" onsubmit="return confirm('Etes vous sur de vouloir effacer cette commande ?')">
                                                        <input type="hidden" name="_method" value="DELETE">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                                        <button class="btn btn-danger ml-3"><i class="fa fa-trash"></i></button>
                                                    </form>
                                                {% endif %}
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $('.loading-button').hide();
        $('.generate-buttons').click( function(e) {
            let recommendationId = $(this).attr('recommendation-id')
            let loadingButton = $("button[recommendation-id='" + recommendationId +"']");
            $(this).hide();
            loadingButton.show();
        } )
    </script>
{% endblock %}
