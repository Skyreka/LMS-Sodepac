<form method="POST" action="{{ path('admin_flash_delete', {id: flash.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous vraiment sûr de vouloir supprimer le Flash ?')">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flash.id) }}">
    <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
</form>
