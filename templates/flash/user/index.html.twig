{% extends 'base.html.twig' %}

{% block title %}Vos Flashs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-12 align-self-center">
                <h3 class="text-themecolor">Découvrir Flashs</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login_success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('user_flash_index') }}">Flashs</a></li>
                </ol>
            </div>
        </div>
        <div class="d-flex no-block">
            <div class="mr-auto m-b-5">
                <a href="{{ path('login_success') }}" class="btn btn-success">Retour</a>
            </div>
        </div>
        <div class="col-12">
            <!--begin::Alert-->
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">{{ message }}</div>
                {% endfor %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-lg-10">
                <div class="card" id="insert-table">
                    <div class="card-body">
                        <div class="d-flex no-block">
                            <h4 class="card-title">Liste des Flashs reçu en {{ "NOW"|date('Y') }}</h4>
                        </div>
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table">
                                <thead>
                                <tr>
                                    <th>Date de création</th>
                                    <th>Texte</th>
                                    <th>Fichiers</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for flash in flashs %}
                                    <tr>
                                        <td>{{ flash.displayAt | date('d/m/Y') }}</td>
                                        <td>{{ flash.bsv.text }}</td>
                                        <td>
                                            <a title="Découvrir" href="{{ path('user_flash_show', {id: flash.bsv.id}) }}" class="btn btn-success">Découvrir</a>
                                        </td>
                                        <td>
                                            {% if flash.checked == 0 %}
                                                {{ include('flash/user/_check.html.twig') }}
                                            {% else %}
                                                <i class="ti-eye"></i> Lu
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="spinner-border" role="status" id="loading">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="col-lg-2">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Choix de l'année</h4>
                        <div class="button-group">
                            {% for i in 0..4 %}
                                <a href="{{ path('user_flash_history_show', {year: "now"|date("Y") - i}) }}" class="btn btn-block waves-effect waves-light btn-info history">{{ "now"|date("Y") - i }}</a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script>
        $(document).on('click', 'a.history', function (event) {
            event.preventDefault();
            let $field = $(this)
            let url = $field.attr('href')
            $.post(url).then(function (data) {
                let content = $('#insert-table')
                content.empty()
                content.append( data )
            })
        })
        var $loading = $('#loading').hide();
        $(document)
            .ajaxStart(function () {
                $loading.show();
            })
            .ajaxStop(function () {
                $loading.hide();
            });
    </script>
{% endblock %}
