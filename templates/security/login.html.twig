<body id="top">
<header>
    <div class="aa-header" style="background-image: url({{ asset('images/bg.jpg') }})">
        <nav class="navbar navbar-expand-md navbar-transparent" style="">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-3">
                        <img class="img-fluid pr-3" src="{{ asset('images/logo.png') }}" alt="logo">
                    </div>
                </div>
            </div>
        </nav>
        <div class="container aa-header-content text-left text-white">
            <div class="row">
                <div class="login-box card">
                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% for message in app.flashes('danger') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}
                        <form class="form-horizontal form-material" id="loginform" method="POST" action="{{ path('login') }}">
                            <h3 class="p-2 rounded-title mb-3">Connexion</h3>
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    <label form="email">Adresse Email:</label>
                                    <input class="form-control" id="email" type="text" name="_email" value="{{ last_username }}" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-12">
                                    <label form="password">Mot de passe:</label>
                                    <input class="form-control" id="password" type="password" name="_password" required>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="d-flex no-block align-items-center">
                                    <div class="checkbox checkbox-primary pt-0">
                                        <input id="checkbox-signup" type="checkbox" name="_remember_me" checked>
                                        <label for="checkbox-signup"> Se souvenir de moi </label>
                                    </div>
                                    <div class="ml-auto">
                                        <a href="javascript:void(0)" id="to-recover" class="text-muted"><i class="fa fa-lock mr-1"></i> Oublié?</a>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group text-center mt-3">
                                <div class="col-xs-12">
                                    <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Se connecter</button>
                                </div>
                            </div>
                            <div class="form-group mb-0">
                                <div class="col-sm-12 text-center">
                                    Vous n'avez pas de compte? Contacter votre technicien(e) Sodepac
                                </div>
                            </div>
                        </form>
                        <form class="form-horizontal" id="recoverform" action="index.html">
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    <h3>Vous avez oublié votre mot de passe ?</h3>
                                    <p class="text-muted">Entrez votre email:  </p>
                                </div>
                            </div>
                            <div class="form-group ">
                                <div class="col-xs-12">
                                    <input class="form-control" type="text" required="" placeholder="Email"> </div>
                            </div>
                            <div class="form-group text-center mt-3">
                                <div class="col-xs-12">
                                    <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <a href="https://play.google.com/store/apps/details?id=com.sodepac.app">
                                <img alt="Badge Google Play" class="img-fluid text-center" src="{{ asset('images/google-play-badge.png') }}" />
                            </a>
                        </div>
                        <div class="col-6">
                            <img alt="Badge Apple" class="img-fluid text-center" src="{{ asset('images/apple-play-badge.png') }}" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
