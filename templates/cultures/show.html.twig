{% extends 'base.html.twig' %}

{% block title %} {{ culture.name.name }} {% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Accueil</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('cultures.index') }}">Ilots</a></li>
                    <li class="breadcrumb-item active"><a href="{{ path('ilots.show', {id: culture.ilot.id})}}">{{ culture.ilot.name }}</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">{{ culture.name.name }}</a></li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        {% if app.session.get('listCulture') %}
            <div class="alert alert-warning">Vous êtes actuellement en mode intervention multiple, votre intervention sera effectuée sur toutes les cultures des ilots sélectionnées</div>
        {% endif %}
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex no-block">
                            <h4 class="card-title">Interventions</h4>
                        </div>
                        <div class="table-responsive m-t-20">
                            <table class="table stylish-table">
                                <tbody>
                                    <tr>
                                        <td>
                                            <a href="{{ path('interventions.semis.new', {id: culture.id}) }}" class="btn waves-effect btn-block waves-light btn btn-success">
                                                Semis <br>
                                                <small class="text-muted">
                                                    {% if ir.findIfInterventionExist('Semis', culture) %}
                                                        <span class="badge badge-primary">Effectué</span>
                                                    {% else %}
                                                        <span class="badge badge-warning">Non effectué</span>
                                                    {% endif %}
                                                </small>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="{{ path('interventions.phyto.new', {id: culture.id, name: 'Désherbant'}) }}" class="btn waves-effect btn-block waves-light btn btn-success">
                                                Désherbage <br>
                                                <small class="text-muted">
                                                    {% if ir.findIfInterventionExist('Désherbant', culture) %}
                                                        <span class="badge badge-primary">Effectué</span>
                                                    {% else %}
                                                        <span class="badge badge-warning">Non effectué</span>
                                                    {% endif %}
                                                </small>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="{{ path('interventions.phyto.new', {id: culture.id, name: 'Fongicide'}) }}" class="btn waves-effect btn-block waves-light btn btn-success">
                                                Fongicide <br>
                                                <small class="text-muted">
                                                    {% if ir.findIfInterventionExist('Fongicide', culture) %}
                                                        <span class="badge badge-primary">Effectué</span>
                                                    {% else %}
                                                        <span class="badge badge-warning">Non effectué</span>
                                                    {% endif %}
                                                </small>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="{{ path('interventions.phyto.new', {id: culture.id, name: 'Insecticide'}) }}" class="btn waves-effect btn-block waves-light btn btn-success">
                                                Insecticide <br>
                                                <small class="text-muted">
                                                    {% if ir.findIfInterventionExist('Insecticide', culture) %}
                                                        <span class="badge badge-primary">Effectué</span>
                                                    {% else %}
                                                        <span class="badge badge-warning">Non effectué</span>
                                                    {% endif %}
                                                </small>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a href="{{ path('interventions.phyto.new', {id: culture.id, name: 'Fertilisant'}) }}" class="btn waves-effect btn-block waves-light btn btn-success">
                                                Fertilisant <br>
                                                <small class="text-muted">
                                                    {% if ir.findIfInterventionExist('Fertilisant', culture) %}
