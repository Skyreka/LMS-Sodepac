{% extends 'base.html.twig' %}

{% block title %}Modification d'une exploitation{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row page-titles">
            <div class="col-md-5 col-8 align-self-center">
                <h3 class="text-themecolor">Modification de l'exploitation</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('login.success') }}">Accueil</a></li>
                    {% if app.user.status == 'ROLE_ADMIN' %}
                        <li class="breadcrumb-item active"><a href="{{ path('admin_users_index') }}">Utilisateurs</a></li>
                    {% elseif app.user.status == 'ROLE_TECHNICIAN' %}
                        <li class="breadcrumb-item"><a href="{{ path('technician_customers_index') }}">Clients</a></li>
                    {% endif %}
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Exploitation</a></li>
                    <li class="breadcrumb-item active">Modification</li>
                </ol>
            </div>
        </div>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        {% include 'technician/customers/_size.html.twig' %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
